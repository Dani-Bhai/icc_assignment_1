<script>
    // Azure Services Carousel functionality
    function initializeAzureCarousel() {
        let currentSlide = 0;
        const carousel = document.getElementById('azureServicesCarousel');
        if (!carousel) return;
        
        const slides = carousel.querySelectorAll('.azure-carousel-slide');
        const indicators = carousel.querySelectorAll('.azure-carousel-indicator');
        const prevBtn = carousel.querySelector('#azurePrevBtn');
        const nextBtn = carousel.querySelector('#azureNextBtn');
        const totalSlides = slides.length;

        if (totalSlides === 0) return;

        function showSlide(index) {
            // Hide all slides
            slides.forEach(slide => slide.classList.remove('active'));
            
            // Remove active class from all indicators
            indicators.forEach(indicator => indicator.classList.remove('active'));
            
            // Show current slide
            slides[index].classList.add('active');
            
            // Set active indicator
            indicators[index].classList.add('active');
            
            currentSlide = index;
        }

        // Next button event
        if (nextBtn) {
            nextBtn.addEventListener('click', function() {
                let newIndex = currentSlide + 1;
                if (newIndex >= totalSlides) newIndex = 0;
                showSlide(newIndex);
            });
        }

        // Previous button event
        if (prevBtn) {
            prevBtn.addEventListener('click', function() {
                let newIndex = currentSlide - 1;
                if (newIndex < 0) newIndex = totalSlides - 1;
                showSlide(newIndex);
            });
        }

        // Indicator click events
        indicators.forEach((indicator, index) => {
            indicator.addEventListener('click', function() {
                showSlide(index);
            });
        });

        // Auto-advance carousel every 8 seconds
        setInterval(() => {
            let newIndex = currentSlide + 1;
            if (newIndex >= totalSlides) newIndex = 0;
            showSlide(newIndex);
        }, 8000);
    }

    // Initialize carousel when DOM is loaded
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initializeAzureCarousel);
    } else {
        initializeAzureCarousel();
    }
    
    // Also initialize after Blazor has rendered
    window.addEventListener('load', initializeAzureCarousel);
</script>